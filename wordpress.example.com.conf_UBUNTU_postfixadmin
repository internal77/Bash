# /etc/nginx/conf.d -БЕЗ APACHE и PROXY
server {
listen  80;
             server_name wordpress.example.com www.wordpress.example.com;
    location / {
               root /var/www/wordpress.example.com;
             error_log /var/www/wordpress.example.com/nginxerror.log;
             index index.php index.html index.htm;

    location /mailadmin {
            alias /var/www/postfixadmin/public;
            error_log /var/log/postfixadmin/postfixadmin_error.log;
            location ~ \.php$ {

            # fastcgi_pass  unix:/var/run/php-fpm/wordpress.example.com.sock;
              fastcgi_pass 127.0.0.1:9000;
              fastcgi_param SCRIPT_FILENAME $request_filename;
              fastcgi_param QUERY_STRING    $query_string;
              fastcgi_param REQUEST_METHOD  $request_method;
              fastcgi_param CONTENT_TYPE    $content_type;
              fastcgi_param CONTENT_LENGTH  $content_length;
              fastcgi_index                       index.php;
              include fastcgi_params;
     }
    }

    location /webmail {
            alias /var/www/roundcube;

            location ~ \.php$ {

            # fastcgi_pass  unix:/var/run/php-fpm/wordpress.example.com.sock;
              fastcgi_pass 127.0.0.1:9000;
              fastcgi_param SCRIPT_FILENAME $request_filename;
              fastcgi_param QUERY_STRING    $query_string;
              fastcgi_param REQUEST_METHOD  $request_method;
              fastcgi_param CONTENT_TYPE    $content_type;
              fastcgi_param CONTENT_LENGTH  $content_length;
              fastcgi_index                       index.php;
              include fastcgi_params;
     }
    }

   location /status {
                fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
                fastcgi_index index.php;
                include fastcgi_params;
                fastcgi_pass 127.0.0.1:9000;
}
     location ~ \.php$ {
                fastcgi_split_path_info ^(.+?\.php)(/.*)$;
                if (!-f $document_root$fastcgi_script_name) {
                return 404;
}
                include fastcgi_params;
                #fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
                #fastcgi_pass unix:/run/php-fpm.sock;
                fastcgi_pass 127.0.0.1:9000;
}
}
}
